import groovy.json.JsonBuilder

//API Endpoints
mappings {
    // Synchronize
    path("/sync") 							{	action: [	GET: "sync"        					]}
    // Poll
    path("/poll") 							{	action: [	GET: "getPoll"        				]}
    // Authorized Devices
    path("/allowedAttributes") 				{	action: [	GET: "getAllowedAttributes"      	]}
	// Execute Command
    path("/executeCommand") 				{	action: [	PUT: "executeCommand"   		   	]}
}



